<%- include('boilerplate.ejs') %>
<div class="container">
    <div class="row mt-5">
        <div class="card">
            <div class="card-body">
            <h3 class="card-title mb-3">Sign Up to Start Your List</h3>
            <h5 class="card-subtitle mb-3" style="font-weight: normal">Already Have An Account? <a href="/">Login</a></h5>
            <div class="card-text"> 
                <form action="/register" method="POST">
                    <label class="form-label " for="">UserName</label>
                    <input  class="form-control mb-3" type="text" name="username" id="username">
                    <label class="form-label" for="">Password</label>
                    <input  class="form-control mb-3" type="password" name="password" id="password">
                    <button class="btn btn-primary">Register</button>
                </form>
            </div>
            </div>
          </div>
    </div>
</div>
